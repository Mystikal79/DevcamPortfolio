<%= form_for(@portfolio_item) do |f| %>

  <div class="form-group col-sm-5">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group col-sm-5">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, class: 'form-control' %>
  </div>

  <div class="form-group col-sm-5">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows:(10) %>
  </div>

  <div class="form-group col-sm-5"><br>
    <p><h5>Technology Types:</h5></p>
    <%= f .fields_for :technologies do |technology_form| %>
      <div class="form-group col-sm-12">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: 'form-control' %>
      </div>
    <% end %>
  </div>

  <div class="form-group col-sm-5">
    <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary' %>
  </div>
<% end %>